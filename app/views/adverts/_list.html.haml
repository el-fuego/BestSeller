.items
  - items.each do |item|
    .item
      .features
        .price{title: t(:price)}
          = "$#{item.price}"
        .profit{title: t(:price)}
          = "$#{item.best_offer.price_difference}"
          %span
            = t :saved

        .manufacturer_year
          = item.manufacture_year

        .region
          = item.city
          
        - if item.advert_created_at
          .date{title: "#{t :posted_at} #{item.advert_created_at.strftime '%d.%m.%Y %H:%M'}"}
            -# = render '/items/date', date: item.created_at
            = item.advert_created_at.strftime '%d.%m.%Y %H:%M'

      %h2{class: 'name'}
        = link_to "#{item.manufacturer_model.manufacturer.name} #{item.manufacturer_model.name}", item.url, target: :_blank

      = item.description.html_safe


      = link_to image_tag(item.thumbnail_url, {alt: ''}), item.url, target: :_blank
