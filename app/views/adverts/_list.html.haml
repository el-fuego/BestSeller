.items
  - items.each do |item|
    .item
      .features
        .price{title: t(:price)}
          = render '/items/price', item: item

        .manufacturer_year
          = item.manufacturer_year

        .date{title: "#{t :posted_at} #{item.created_at.strftime '%d.%m.%Y %H:%M'}"}
          = render '/items/date', date: item.created_at

      %h2{class: 'name'}
        = link_to "#{item.manufacturer.name} #{item.manufacturer_model.name}", item.url

      = link_to image_tag(item.thumbnail_url, {alt: ''}), item.url
